{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build WASM (Make)",
            "type": "shell",
            // Usamos mingw32-make que é o padrão do MSYS2 no Windows
            "command": "mingw32-make",
            "args": ["all"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$gcc",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": true,
                "panel": "shared"
            }
        },
        {
            "label": "Clean Project",
            "type": "shell",
            "command": "mingw32-make",
            "args": ["clean"],
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}